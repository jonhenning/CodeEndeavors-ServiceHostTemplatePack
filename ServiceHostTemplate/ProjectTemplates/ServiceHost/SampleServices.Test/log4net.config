<?xml version="1.0" encoding="utf-8" ?>
<log4net>
    <root>
        <level value="DEBUG"/>
    </root>
    <appender name="AppLogAppender" type="log4net.Appender.RollingFileAppender">
        <file type="log4net.Util.PatternString" value="..\..\logs\$safeprojectname$\App_%date{yyyyMMdd}_%processid.txt"/>
        <appendToFile value="true"/>
        <staticLogFileName value="true"/>
        <rollingStyle value="Date"/>
        <datePattern value="yyyyMMdd"/>
        <layout type="log4net.Layout.PatternLayout">
            <param name="ConversionPattern" value="%date{yyyy-MM-dd hh:mm:ss.fff tt}|%5thread|%-5level|%message%newline"/>
        </layout>
    </appender>
    <appender name="HttpLogAppender" type="log4net.Appender.RollingFileAppender">
        <file type="log4net.Util.PatternString" value="..\..\logs\$safeprojectname$\HTTP_%date{yyyyMMdd}_%processid.txt"/>
        <appendToFile value="true"/>
        <staticLogFileName value="true"/>
        <rollingStyle value="Date"/>
        <datePattern value="yyyyMMdd"/>
        <layout type="log4net.Layout.PatternLayout">
            <param name="ConversionPattern" value="%date{yyyy-MM-dd hh:mm:ss.fff tt}|%5thread|%-5level|%message%newline"/>
        </layout>
    </appender>
    <logger name="SampleAppLogger">
        <appender-ref ref="AppLogAppender"/>
    </logger>
    <logger name="HttpServiceLogger">
        <appender-ref ref="HttpLogAppender"/>
    </logger>
</log4net>
